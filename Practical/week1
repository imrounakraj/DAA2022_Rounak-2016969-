#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
  int arr[n], srch,i;

  printf("Enter no of elements in array\n");
  scanf("%d", &n);

  printf("Enter %d integer(s)\n", n);

  for (i = 0; i < n; i++)
    scanf("%d", &arr[i]);

  printf("Enter a no to search\n");
  scanf("%d", &srch);

  for (i = 0; i < n; i++)
  {
    if (arr[i] == srch)    
    {
      printf("%d is present at position %d.\n", srch, i);
      printf("no of comparison= %d",i+1);
      break;
    }
  }
  if (i == n){
    printf("%d is not present in the array.\n", srch);
    printf("no of comparison= %d",n);
  }

  return 0;
}
